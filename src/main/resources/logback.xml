<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>restaurant.log</file>
        <append>false</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        	<charset>UTF-8</charset>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="FILE" />
    </root>
</configuration>
